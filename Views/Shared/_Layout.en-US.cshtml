@using Car.Helpers

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]Car Selling App</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color:#005254;">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" asp-route-culture="en-US"><img src="~/image/Logo.png" /></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Languages
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                                    <a class="dropdown-item text-dark" asp-controller="Home" asp-action="Index" asp-route-culture="en-US">English</a>
                                    <a class="dropdown-item text-dark" asp-controller="Home" asp-action="Index" asp-route-culture="tr-TR">Turkish</a>
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index" asp-route-culture="en-US">Car Selling App</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy" asp-route-culture="en-US">Privacy</a>
                            </li>


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Menu
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Sale" asp-action="Index" asp-route-culture="en-US">Cars</a>
                                    @if (User.IsInRole(Roles.Admin))
                                    {
                                        <a class="dropdown-item text-dark" asp-area="" asp-controller="Make" asp-action="Index" asp-route-culture="en-US">Makes</a>
                                        <a class="dropdown-item text-dark" asp-area="" asp-controller="Model" asp-action="Index" asp-route-culture="en-US">Model</a>
                                        <a class="dropdown-item  text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Assign Another Admin</a>
                                    }
                                    @if (User.IsInRole(Roles.Executive))
                                    {
                                        <a class="dropdown-item text-dark" asp-area="" asp-controller="Model" asp-action="Index">Model</a>
                                    }

                                    @if (!User.IsInRole(Roles.Admin) && !User.IsInRole(Roles.Executive))
                                    {
                                        <a class="dropdown-item  text-dark" id="register" asp-area="Identity" asp-page="/Account/Register" asp-route-culture="en-US">Register</a>
                                        <a class="dropdown-item  text-dark" id="register" asp-area="Identity" asp-page="/Account/Login" asp-route-culture="en-US">Login</a>
                                    }
                                    @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Executive))
                                    {

                                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="dropdown-item btn btn-link text-dark">Logout</button>
                                        </form>



                                    }

                                </div>
                            </li>

                        </ul>


                    </div>

                </div>
              

            </nav>


        </header>



        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-light" style="        background-color: #005254;">
            <div class="container">
                &copy; 2020 - Car - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>

   