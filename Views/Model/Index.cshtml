@model IEnumerable<Car.Models.Model>
@{
    ViewData["Title"] = "Modeller - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-12">
        <h2 class="text-info"> Araç Modelleri</h2>
    </div>
    <br />
    <div class="col-12 text-right">
        <a class="btn btn-info" asp-action="Create">Yeni Model Ekle</a>
    </div>
    <br />
    <br />
    <table class="table table-stripper border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Make)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Make.Name)
        </td>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        @if (User.IsInRole(Car.Helpers.Roles.Admin))
        {
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        }



    </tr>
        }
    </table>

</div>

