@{
    ViewData["Title"] = "Ana Sayfa - ";
}
<body style="background-color:#009092;">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="#Info">
                    <img src="~/image/sale/car.gif" class="d-block w-100" alt="...">
                </a>
                
                <div class="carousel-caption d-none d-md-block">
                    <h5>Güvenliğine Önem Veriyoruz!</h5>
                    <p>Bu uygulama Lorem'deki en güvenli uygulama!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/image/sale/car2.gif" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Zamanına Değer Veriyoruz</h5>
                    <p>Aynı zamanda Lorem'deki en hızlı uygulama!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/image/sale/car3.gif" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>İyi Zaman Geçirin!</h5>
                    <p>Eğlenceli olmasaydı ne yapardınız...</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Önceki</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Sıradaki</span>
        </a>
    </div>

    <br />
    <br />
    <br />
    <br />
    <div id="Info" class="container text-center">
        <h1 class="text-white">Araç Satış Uygulaması</h1>
        
        <p class="text-white" style="font-size:2vw">
            Araç Satış Uygulaması © Size ucuz yoldan araçlarınızı satmanın (aslında bedava), bir yolunu sunar!
            Gelin ve hızlıca aracınızı satmanın keyfini yaşayın!
        </p>
        <div>
            <a class="btn btn-primary" asp-controller="Sale" asp-action="Index" asp-route-culture="tr-TR">Şimdi Başla</a>
        </div>
    </div>
</body>
